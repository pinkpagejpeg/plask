{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "types": ["vite/client"],
    "baseUrl": "./src",
    "paths": {
      "@redux": ["shared/lib/redux"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "./styles.d.ts",
    "./images.d.ts", 
    "src/features/hooks/useTypedSelector", "src/features/hooks/useAppDispatch"
, "src/shared/lib/redux/handlers/hadleRejected"  ]
}